
public class ForDois {

	public static void main(String[] args) {
		System.out.println("Soma dos números");
		
		int soma = 0;
		for (int x = 0; x <= 30; x++) {
			soma += x;
		}
		System.out.println(soma);
		
		//-------------------------------------
		
		System.out.println();
		System.out.println("Tabuada de um número");
		
		int numTabuada = 6;
		for (int y = 0; y <= 10; y++) {
			if (y==0) {
				break;
			}
			System.out.println(y*numTabuada);
		}
		

	}

}
