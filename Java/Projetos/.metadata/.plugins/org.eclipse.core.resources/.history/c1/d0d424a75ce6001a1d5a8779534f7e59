
public class Lampada {
	boolean ligada;
	
	private void ligar() {
		this.ligada = true;
	}
	
	private void desligar() {
		this.ligada = false;
	}
	
	private void imprimir() {
		if(this.ligada == true) {
			System.out.println("Lâmpada ligada");
		}else {
			System.out.println("Lâmpada desligada");
		}
	}
}
